<%= form_for(@agency, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @agency.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agency.errors.count, "error") %> prohibited this agency from being saved:</h2>

      <ul>
      <% @agency.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="name">Nombre de la dependencia</label>
    <div class="col-sm-10">
      <%= f.text_field :name, size: 50, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="logo">Logo</label>
    <div class="col-sm-10">
      <%= f.text_field :logo, size: 50, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="phone">Teléfono</label>
    <div class="col-sm-10">
      <%= f.text_field :phone, size: 50, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="ordering">Numeración en pantalla principal</label>
    <div class="col-sm-10">
      <%= f.text_field :ordering, size: 50, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="address">Dirección</label>
    <div class="col-sm-10">
      <%= f.text_area :address, size: "150x3", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="target">Objetivo de la dependencia (Aparece en la pantalla principal)</label>
    <div class="col-sm-10">
      <%= f.text_area :target, size: "150x5", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="description">Decripción de la dependencia</label>
    <div class="col-sm-10">
      <%= f.text_area :description, size: "150x5", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="latitude">Latitude</label>
    <div class="col-sm-10">
      <%= f.text_field :latitude, size: 50, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="longitude">Longitude</label>
    <div class="col-sm-10">
      <%= f.text_field :longitude, size: 50, class: "form-control" %>
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Crear/Actualizar Dependencia", class: "btn btn-default" %>
    </div>
  </div>

<% end %>
