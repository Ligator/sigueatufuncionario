<%= form_for(@question, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @question.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@question.errors.count, "error") %> prohibited this question from being saved:</h2>

      <ul>
      <% @question.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label class="control-label col-sm-2" for="question">Pregunta</label>
    <div class="col-sm-10">
      <%= f.text_area :question, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="agency_target">Campos de las dependecias</label>
    <div class="col-sm-10">
      <div class="checkbox">
        <label><%= f.check_box :agency_target %> Objetivos / Funciones </label>
      </div>

<!--       <div class="checkbox">
        <label><%#= f.check_box :agency_description %> Descripción </label>
      </div>
 -->
      <div class="checkbox">
        <label><%= f.check_box :agency_programs %> Proyectos / Programas </label>
      </div>
      <div class="checkbox">
        <label><%= f.check_box :agency_contact %> Información de contacto </label>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-2" for="agency_target">Campos de los funcionarios</label>
    <div class="col-sm-10">
      <div class="checkbox">
        <label><%= f.check_box :functionary_functions %> Metas </label>
      </div>
      <div class="checkbox">
        <label><%= f.check_box :functionary_schooling %> Perfil académico </label>
      </div>
      <div class="checkbox">
        <label><%= f.check_box :functionary_experience %> Experiencia </label>
      </div>
      <div class="checkbox">
        <label><%= f.check_box :functionary_salary %> Salario </label>
      </div>
      <div class="checkbox">
        <label><%= f.check_box :functionary_contact %> Información de contacto </label>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Crear/Actualizar Pregunta", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
